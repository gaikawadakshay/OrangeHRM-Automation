<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="OrangeHRM Automation Suite" parallel="false">

    <test name="OrangeHRM Functional Tests">
    <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.orangehrm.tests.LoginTest"/>
            <class name="com.orangehrm.tests.DashboardTest"/>
            <class name="com.orangehrm.tests.AddEmployeeTest"/>
            <class name="com.orangehrm.tests.EditEmployeeTest"/>
            <class name="com.orangehrm.tests.LoginTest"/>
        </classes>
    </test>
	
	<test name="End-to-End Tests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        
        <classes>
            <class name="com.orangehrm.tests.EndToEndTest">
                <methods>
                    <include name="testEndToEndFlow_AddEmployee"/>
                    <include name="testEndToEndFlow_AddEmployeeWithLogin"/>
                    <include name="testEndToEndFlow_AddEmployeeWithAllDetails"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
